{
    "useTabs": false,
    "bracketSpacing": true,
    "tabWidth": 4,
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "@repo/vite-config/(.*)$",
        "@repo/core/(.*)$",
        "@repo/ui",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "overrides": [
        {
            "files": "*.{yaml,yml}",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
