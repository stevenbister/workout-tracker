{
    "extends": ["//"],
    "tasks": {
        "build": {
            "dependsOn": ["build:fonts", "build:styles"]
        },
        "build:styles": {
            "outputs": ["dist/**"]
        },
        "dev": {
            "with": ["dev:fonts", "dev:styles"]
        },
        "dev:fonts": {
            "cache": false,
            "persistent": true
        },
        "dev:styles": {
            "cache": false,
            "persistent": true
        }
    }
}
